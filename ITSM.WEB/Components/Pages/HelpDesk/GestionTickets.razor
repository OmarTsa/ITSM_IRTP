@page "/helpdesk/gestion"
@using ITSM.Entidades
@using ITSM.WEB.Client.Servicios
@using MudBlazor
@inject TicketServicio _ticketServicio
@inject NavigationManager Navigation

@rendermode InteractiveServer

<MudText Typo="Typo.h5" Class="mb-4">Gestión de Tickets OTIC</MudText>

@if (listaTickets == null)
{
    <MudProgressLinear Color="Color.Primary" Indeterminate="true" />
}
else
{
    <MudTable Items="@listaTickets" Hover="true" Striped="true" Elevation="2">
        <HeaderContent>
            <MudTh>ID</MudTh>
            <MudTh>Fecha</MudTh>
            <MudTh>Solicitante</MudTh>
            <MudTh>Título</MudTh>
            <MudTh>Estado</MudTh>
            <MudTh>Acciones</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd>@context.IdTicket</MudTd>
            <MudTd>@context.FechaCreacion.ToShortDateString()</MudTd>
            <MudTd>@context.Solicitante?.NombreCompleto</MudTd>
            <MudTd>@context.Titulo</MudTd>
            <MudTd>
                <MudChip T="string" Size="Size.Small" Color="@(context.IdEstado == 4 ? Color.Success : Color.Info)">
                    @context.Estado?.Nombre
                </MudChip>
            </MudTd>
            <MudTd>
                <MudIconButton Icon="@Icons.Material.Filled.Edit" Color="Color.Primary"
                               OnClick="@(() => Navigation.NavigateTo($"/helpdesk/ticket/{context.IdTicket}"))" />
            </MudTd>
        </RowTemplate>
    </MudTable>
}

@code {
    private List<Ticket>? listaTickets;

    protected override async Task OnInitializedAsync()
    {
        listaTickets = await _ticketServicio.ListarTodosLosTicketsAsync();
    }
}