@page "/helpdesk/mis-tickets"
@using ITSM.Entidades
@using ITSM.Negocio
@using ITSM.WEB.Client.Servicios
@inject TicketNegocio TicketNegocio
@inject ServicioSesion Sesion
@rendermode @(new InteractiveServerRenderMode(prerender: false))

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-6">
    <MudText Typo="Typo.h4" Class="mb-4">Mis Solicitudes</MudText>

    <MudTable Items="@tickets" Hover="true" Elevation="2" Loading="@loading">
        <HeaderContent>
            <MudTh>ID</MudTh>
            <MudTh>Título</MudTh>
            <MudTh>Fecha</MudTh>
            <MudTh>Estado</MudTh>
            <MudTh>Acciones</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd>@context.IdTicket</MudTd>
            <MudTd>@context.Titulo</MudTd>
            <MudTd>@context.FechaCreacion.ToString("dd/MM/yyyy")</MudTd>
            <MudTd>
                <MudChip T="string" Color="Color.Info" Size="Size.Small">@context.Estado?.Nombre</MudChip>
            </MudTd>
            <MudTd>
                <MudTooltip Text="Ver Detalle">
                    <MudIconButton Icon="@Icons.Material.Filled.Visibility" Color="Color.Primary"
                                   href="@($"/helpdesk/detalle/{context.IdTicket}")" />
                </MudTooltip>
            </MudTd>
        </RowTemplate>
    </MudTable>
</MudContainer>

@code {
    private List<Ticket> tickets = new();
    private bool loading = true;

    protected override async Task OnInitializedAsync()
    {
        var user = await Sesion.ObtenerUsuario();
        if (user != null)
        {
            tickets = await TicketNegocio.ListarTicketsPorUsuarioAsync(user.IdUsuario);
        }
        loading = false;
    }
}