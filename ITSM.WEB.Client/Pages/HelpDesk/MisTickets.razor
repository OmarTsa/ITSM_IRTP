@page "/helpdesk/mis-tickets"
@using ITSM.Entidades
@using ITSM.WEB.Client.Servicios
@using MudBlazor
@using Microsoft.AspNetCore.Components.Authorization
@inject TicketServicio _ticketServicio
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Navigation

@rendermode InteractiveWebAssembly

<MudText Typo="Typo.h5" Class="mb-4">Mis Tickets de Soporte</MudText>

@if (tickets == null)
{
    <MudProgressLinear Color="Color.Primary" Indeterminate="true" Class="my-7" />
}
else
{
    <MudTable Items="@tickets" Hover="true" Bordered="true" Striped="true" Elevation="2" Filter="new Func<Ticket, bool>(FiltrarBusqueda)">
        <ToolBarContent>
            <MudText Typo="Typo.h6">Historial de Solicitudes</MudText>
            <MudSpacer />
            <MudTextField @bind-Value="busqueda" Placeholder="Buscar por título o código..." Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
        </ToolBarContent>
        <HeaderContent>
            <MudTh>ID</MudTh>
            <MudTh>Fecha</MudTh>
            <MudTh>Título</MudTh>
            <MudTh>Estado</MudTh>
            <MudTh>Prioridad</MudTh>
            <MudTh>Activo</MudTh>
            <MudTh>Acciones</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="ID">@context.IdTicket</MudTd>
            <MudTd DataLabel="Fecha">@context.FechaCreacion.ToShortDateString()</MudTd>
            <MudTd DataLabel="Título">@context.Titulo</MudTd>
            <MudTd DataLabel="Estado">
                <MudChip T="string" Size="Size.Small" Color="@ObtenerColorEstado(context.IdEstado)">
                    @(context.Estado?.Nombre ?? "Pendiente")
                </MudChip>
            </MudTd>
            <MudTd DataLabel="Prioridad">
                <MudText Color="@ObtenerColorPrioridad(context.IdPrioridad)">
                    @(context.Prioridad?.Nombre ?? "Baja")
                </MudText>
            </MudTd>
            <MudTd DataLabel="Activo">@(context.Activo?.CodigoPatrimonial ?? "N/A")</MudTd>
            <MudTd DataLabel="Acciones">
                <MudIconButton Icon="@Icons.Material.Filled.Visibility" Color="Color.Info"
                               OnClick="@(() => Navigation.NavigateTo($"/helpdesk/ticket/{context.IdTicket}"))" />
            </MudTd>
        </RowTemplate>
        <PagerContent>
            <MudTablePager />
        </PagerContent>
    </MudTable>
}

@code {
    private List<Ticket>? tickets;
    private string busqueda = "";

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        var idClaim = user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier);

        if (idClaim != null && int.TryParse(idClaim.Value, out int idUsuario))
        {
            tickets = await _ticketServicio.ObtenerTicketsPorUsuario(idUsuario);
        }
    }

    private bool FiltrarBusqueda(Ticket t)
    {
        if (string.IsNullOrWhiteSpace(busqueda)) return true;
        if (t.Titulo?.Contains(busqueda, StringComparison.OrdinalIgnoreCase) ?? false) return true;
        if (t.IdTicket.ToString().Contains(busqueda)) return true;
        if (t.Activo?.CodigoPatrimonial?.Contains(busqueda, StringComparison.OrdinalIgnoreCase) ?? false) return true;
        return false;
    }

    private Color ObtenerColorEstado(int idEstado) => idEstado switch
    {
        1 => Color.Info,     // Abierto
        2 => Color.Warning,  // En Proceso
        4 => Color.Success,  // Resuelto
        5 => Color.Default,  // Cerrado
        _ => Color.Default
    };

    private Color ObtenerColorPrioridad(int idPrioridad) => idPrioridad switch
    {
        1 => Color.Error,    // Alta
        2 => Color.Warning,  // Media
        _ => Color.Success   // Baja
    };
}