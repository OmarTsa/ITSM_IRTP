@page "/helpdesk/nuevo-ticket"
@using ITSM.Entidades
@using ITSM.WEB.Client.Servicios
@using MudBlazor
@inject TicketServicio _ticketServicio
@inject NavigationManager Navigation
@inject ISnackbar Snackbar

<MudPaper Class="pa-4 ma-2" Elevation="3">
    <MudText Typo="Typo.h5">Nuevo Ticket</MudText>
    <MudForm @bind-IsValid="@success">

        <MudTextField @bind-Value="ticket.Titulo" Label="Título del Incidente" Required="true" />
        <MudTextField @bind-Value="ticket.Descripcion" Label="Descripción Detallada" Lines="4" Required="true" />

        <MudSelect T="int" Label="Categoría" @bind-Value="ticket.IdCategoria" AnchorOrigin="Origin.BottomCenter">
            @foreach (var cat in categorias)
            {
                <MudSelectItem Value="@cat.IdCategoria">@cat.Nombre</MudSelectItem>
            }
        </MudSelect>

        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="Guardar" Disabled="@(!success)" Class="mt-4">
            Registrar Ticket
        </MudButton>
    </MudForm>
</MudPaper>

@code {
    bool success;
    Ticket ticket = new Ticket();
    List<Categoria> categorias = new List<Categoria>();

    protected override async Task OnInitializedAsync()
    {
        // Esto ahora funciona porque actualizamos TicketServicio.cs
        categorias = await _ticketServicio.ObtenerCategorias();
    }

    private async Task Guardar()
    {
        try
        {
            // TODO: Obtener el ID real del usuario logueado
            ticket.IdSolicitante = 1;
            ticket.IdEstado = 1;      // Abierto
            ticket.IdPrioridad = 3;   // Media

            await _ticketServicio.GuardarTicket(ticket);

            Snackbar.Add("Ticket creado correctamente", Severity.Success);
            Navigation.NavigateTo("/helpdesk/mis-tickets");
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error: {ex.Message}", Severity.Error);
        }
    }
}