@page "/helpdesk/detalle/{Id:int}"
@using ITSM.Entidades
@inject TicketServicio _ticketServicio
@inject NavigationManager Nav
@inject ISnackbar Snackbar

<MudText Typo="Typo.h5" GutterBottom="true">Detalle del Ticket #@Id</MudText>

@if (ticket == null)
{
    <MudProgressCircular Color="Color.Primary" Indeterminate="true" />
}
else
{
    <MudPaper Class="pa-4">
        <MudTextField Label="Título" Value="@ticket.Titulo" ReadOnly="true" />
        <MudTextField Label="Descripción" Value="@ticket.Descripcion" Lines="3" ReadOnly="true" Class="mt-3" />
        <MudTextField Label="Estado" Value="@ticket.Estado?.Nombre" ReadOnly="true" Class="mt-3" />

        <MudButton Variant="Variant.Filled" Color="Color.Secondary" Class="mt-4" OnClick="Volver">Volver</MudButton>
    </MudPaper>
}

@code {
    [Parameter] public int Id { get; set; }
    private Ticket? ticket;

    protected override async Task OnInitializedAsync()
    {
        ticket = await _ticketServicio.ObtenerTicketPorId(Id);
        if (ticket == null)
        {
            Snackbar.Add("Ticket no encontrado", Severity.Error);
            Volver();
        }
    }

    void Volver() => Nav.NavigateTo("/helpdesk/mis-tickets");
}