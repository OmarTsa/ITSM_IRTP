@page "/login"
@layout ITSM.WEB.Client.Layout.LoginLayout
@using ITSM.Entidades.DTOs
@using ITSM.WEB.Client.Servicios
@inject IServicioSesion _servicioSesion
@inject NavigationManager _nav
@inject ISnackbar _snackbar

<MudContainer MaxWidth="MaxWidth.Small" Class="d-flex align-center justify-center" Style="min-height: 100vh;">
    <MudPaper Elevation="8" Class="pa-8" Style="width: 100%; max-width: 450px; border-radius: 16px;">

        <div class="d-flex flex-column align-center mb-6">
            <MudIcon Icon="@Icons.Material.Filled.Lock" Size="Size.Large" Color="Color.Primary" Class="mb-3" />
            <MudText Typo="Typo.h4" Align="Align.Center" Color="Color.Primary">
                <b>ITSM - IRTP</b>
            </MudText>
            <MudText Typo="Typo.body2" Align="Align.Center" Color="Color.Secondary">
                Sistema de Gestión de Servicios TI
            </MudText>
        </div>

        @if (!string.IsNullOrEmpty(mensajeError))
        {
            <MudAlert Severity="Severity.Error" Class="mb-4" Variant="Variant.Filled">
                @mensajeError
            </MudAlert>
        }

        <EditForm Model="@loginModel" OnValidSubmit="IniciarSesion">
            <DataAnnotationsValidator />

            <MudTextField @bind-Value="loginModel.Username"
                          Label="Usuario"
                          Variant="Variant.Outlined"
                          Class="mb-4"
                          Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Filled.Person"
                          Required="true"
                          RequiredError="El usuario es requerido" />

            <MudTextField @bind-Value="loginModel.Password"
                          Label="Contraseña"
                          Variant="Variant.Outlined"
                          InputType="InputType.Password"
                          Class="mb-6"
                          Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Filled.VpnKey"
                          Required="true"
                          RequiredError="La contraseña es requerida" />

            <MudButton ButtonType="ButtonType.Submit"
                       Variant="Variant.Filled"
                       Color="Color.Primary"
                       FullWidth="true"
                       Size="Size.Large"
                       Disabled="@cargando"
                       Class="mb-3">
                @if (cargando)
                {
                    <MudProgressCircular Size="Size.Small" Indeterminate="true" Class="mr-2" />
                    <span>Iniciando sesión...</span>
                }
                else
                {
                    <MudIcon Icon="@Icons.Material.Filled.Login" Class="mr-2" />
                    <span>Iniciar Sesión</span>
                }
            </MudButton>
        </EditForm>

        <MudDivider Class="my-4" />

        <MudText Typo="Typo.caption" Align="Align.Center" Color="Color.Secondary">
            © 2025 IRTP - Todos los derechos reservados
        </MudText>

    </MudPaper>
</MudContainer>

@code {
    private LoginDto loginModel = new();
    private string mensajeError = string.Empty;
    private bool cargando = false;

    private async Task IniciarSesion()
    {
        cargando = true;
        mensajeError = string.Empty;

        try
        {
            var sesion = await _servicioSesion.IniciarSesion(loginModel);

            if (sesion != null)
            {
                _snackbar.Add("¡Bienvenido al sistema!", Severity.Success);
                _nav.NavigateTo("/", forceLoad: true);
            }
            else
            {
                mensajeError = "Usuario o contraseña incorrectos";
                _snackbar.Add("Credenciales inválidas", Severity.Error);
            }
        }
        catch (HttpRequestException)
        {
            mensajeError = "Error de conexión con el servidor. Por favor, intente más tarde.";
            _snackbar.Add("Error de conexión", Severity.Error);
        }
        catch (Exception ex)
        {
            mensajeError = "Ha ocurrido un error inesperado. Por favor, contacte al administrador.";
            _snackbar.Add($"Error: {ex.Message}", Severity.Error);
        }
        finally
        {
            cargando = false;
        }
    }
}
