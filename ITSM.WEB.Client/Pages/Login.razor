@page "/login"
@layout LoginLayout
@using ITSM.Entidades.DTOs
@using ITSM.WEB.Client.Servicios
@inject ServicioSesion _servicioSesion
@inject NavigationManager _nav

<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card shadow p-4" style="width: 400px;">
        <div class="text-center mb-4">
            <h3 class="text-primary fw-bold">ITSM - IRTP</h3>
            <p class="text-muted">Ingrese sus credenciales</p>
        </div>

        @if (mostrarError)
        {
            <div class="alert alert-danger" role="alert">
                Usuario o contraseña incorrectos.
            </div>
        }

        <EditForm Model="@loginModel" OnValidSubmit="IniciarSesion">
            <DataAnnotationsValidator />

            <div class="mb-3">
                <label class="form-label">Usuario</label>
                <InputText @bind-Value="loginModel.Username" class="form-control" placeholder="Ej: otito" />
                <ValidationMessage For="@(() => loginModel.Username)" />
            </div>

            <div class="mb-3">
                <label class="form-label">Contraseña</label>
                <InputText @bind-Value="loginModel.Password" type="password" class="form-control" placeholder="******" />
                <ValidationMessage For="@(() => loginModel.Password)" />
            </div>

            <button type="submit" class="btn btn-primary w-100" disabled="@cargando">
                @if (cargando)
                {
                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                    <span> Cargando...</span>
                }
                else
                {
                    <span>Ingresar</span>
                }
            </button>
        </EditForm>

        <div class="text-center mt-3">
            <small class="text-muted">Oficina de Tecnologías de la Información</small>
        </div>
    </div>
</div>

@code {
    private LoginDto loginModel = new LoginDto();
    private bool mostrarError = false;
    private bool cargando = false;

    private async Task IniciarSesion()
    {
        cargando = true;
        mostrarError = false;

        var sesion = await _servicioSesion.IniciarSesion(loginModel);

        if (sesion != null)
        {
            _nav.NavigateTo("/"); // Redirigir al Home/Dashboard
        }
        else
        {
            mostrarError = true;
        }

        cargando = false;
    }
}