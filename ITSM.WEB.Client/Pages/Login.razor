@page "/login"
@layout ITSM.WEB.Client.Layout.LoginLayout
@using ITSM.Entidades.DTOs
@using ITSM.WEB.Client.Servicios
@inject ServicioSesion _servicioSesion
@inject NavigationManager _nav
@inject ISnackbar Snackbar

<MudCard Elevation="6" Class="pa-4 rounded-lg" Style="width: 100%; max-width: 400px;">
    <MudCardHeader Class="d-flex justify-center pb-2">
        <CardHeaderContent>
            <div class="d-flex flex-column align-center">
                <div class="d-flex justify-center align-center mb-3" style="background-color: var(--mud-palette-primary); width: 64px; height: 64px; border-radius: 50%;">
                    <MudIcon Icon="@Icons.Material.Filled.Security" Color="Color.Surface" Size="Size.Large" />
                </div>
                <MudText Typo="Typo.h5" Color="Color.Primary" Align="Align.Center" Style="font-weight: 700;">ITSM - IRTP</MudText>
                <MudText Typo="Typo.body2" Color="Color.Secondary" Align="Align.Center">Acceso al Sistema</MudText>
            </div>
        </CardHeaderContent>
    </MudCardHeader>

    <MudCardContent>
        <EditForm Model="@loginModel" OnValidSubmit="IniciarSesion" FormName="loginform">
            <DataAnnotationsValidator />

            <MudTextField @bind-Value="loginModel.Username"
                          Label="Usuario"
                          Variant="Variant.Outlined"
                          Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Filled.Person"
                          Class="mb-4"
                          Required="true"
                          RequiredError="El usuario es obligatorio" />

            <MudTextField @bind-Value="loginModel.Password"
                          Label="Contraseña"
                          Variant="Variant.Outlined"
                          InputType="InputType.Password"
                          Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Filled.Lock"
                          Class="mb-4"
                          Required="true"
                          RequiredError="La contraseña es obligatoria" />

            <MudButton ButtonType="ButtonType.Submit"
                       Variant="Variant.Filled"
                       Color="Color.Primary"
                       FullWidth="true"
                       Size="Size.Large"
                       Disabled="@procesando">
                @if (procesando)
                {
                    <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true" Color="Color.Surface" />
                    <MudText Class="ms-2">Verificando...</MudText>
                }
                else
                {
                    <MudText>INGRESAR</MudText>
                }
            </MudButton>
        </EditForm>
    </MudCardContent>

    <MudCardActions Class="d-flex justify-center pb-4 pt-0">
        <MudText Typo="Typo.caption" Color="Color.Secondary" Align="Align.Center">
            © 2024 IRTP - Oficina de TI
        </MudText>
    </MudCardActions>
</MudCard>

@code {
    // SupplyParameterFromForm mantiene los datos si la conexión falla o se recarga
    [SupplyParameterFromForm]
    private LoginDto loginModel { get; set; } = new LoginDto();

    private bool procesando = false;

    private async Task IniciarSesion()
    {
        procesando = true;
        try
        {
            var sesion = await _servicioSesion.IniciarSesion(loginModel);
            if (sesion != null)
            {
                Snackbar.Add($"Bienvenido, {sesion.Nombre}", Severity.Success);
                _nav.NavigateTo("/", true); // 'true' fuerza la recarga para aplicar el login
            }
            else
            {
                Snackbar.Add("Usuario o contraseña incorrectos", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error: {ex.Message}", Severity.Error);
        }
        finally
        {
            procesando = false;
        }
    }
}