@page "/login"
@layout ITSM.WEB.Client.Layout.LoginLayout
@inject IServicioSesion ServicioSesion
@inject NavigationManager Nav
@inject ISnackbar Snackbar
@using ITSM.Entidades.DTOs
@using ITSM.WEB.Client.Servicios

<div class="login-container">
    <div class="login-card">
        <!-- Logo Corporativo OTIC -->
        <div class="otic-logo-container">
            <img src="/images/logo-otic.png" alt="SOPORTE OTIC" class="otic-logo" onerror="this.style.display='none'" />
            <MudText Typo="Typo.h5" Align="Align.Center" Style="color: #B91C2E; font-weight: 700; margin-top: 16px;">
                Sistema de Gestión ITSM
            </MudText>
            <MudText Typo="Typo.body2" Align="Align.Center" Style="color: #666; margin-top: 8px;">
                Instituto de Radio y Televisión del Perú
            </MudText>
        </div>

        <MudDivider Class="my-4" />

        @if (!string.IsNullOrEmpty(mensajeError))
        {
            <MudAlert Severity="Severity.Error" Class="mb-4" Variant="Variant.Filled" Dense="true">
                @mensajeError
            </MudAlert>
        }

        <MudForm @ref="form">
            <MudTextField @bind-Value="loginModel.Username"
                          Label="Usuario"
                          Variant="Variant.Outlined"
                          Margin="Margin.Dense"
                          Required="true"
                          RequiredError="El usuario es obligatorio"
                          Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Filled.Person"
                          Class="mb-3" />

            <MudTextField @bind-Value="loginModel.Password"
                          Label="Contraseña"
                          Variant="Variant.Outlined"
                          Margin="Margin.Dense"
                          InputType="InputType.Password"
                          Required="true"
                          RequiredError="La contraseña es obligatoria"
                          Adornment="Adornment.Start"
                          AdornmentIcon="@Icons.Material.Filled.Lock"
                          Class="mb-4" />

            <MudButton Variant="Variant.Filled"
                       Color="Color.Error"
                       Size="Size.Large"
                       FullWidth="true"
                       OnClick="IniciarSesion"
                       Disabled="cargando"
                       Style="background: linear-gradient(90deg, #B91C2E 0%, #8B1523 100%); height: 50px; font-weight: 600;">
                @if (cargando)
                {
                    <MudProgressCircular Size="Size.Small" Indeterminate="true" Class="mr-2" />
                    <span>Verificando...</span>
                }
                else
                {
                    <MudIcon Icon="@Icons.Material.Filled.Login" Class="mr-2" />
                    <span>Iniciar Sesión</span>
                }
            </MudButton>
        </MudForm>

        <MudDivider Class="my-4" />

        <MudText Typo="Typo.caption" Align="Align.Center" Style="color: #999;">
            © 2025 IRTP - Todos los derechos reservados
        </MudText>
    </div>
</div>

<style>
    .login-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #B91C2E 0%, #8B1523 100%);
        padding: 20px;
    }

    .login-card {
        width: 100%;
        max-width: 450px;
        border-radius: 16px;
        padding: 40px;
        background: white;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
    }

    .otic-logo-container {
        text-align: center;
        margin-bottom: 24px;
    }

    .otic-logo {
        height: 80px;
        margin-bottom: 16px;
        object-fit: contain;
    }
</style>

@code {
    private LoginDto loginModel = new();
    private string mensajeError = string.Empty;
    private bool cargando = false;
    private MudForm form;

    private async Task IniciarSesion()
    {
        await form.Validate();

        if (!form.IsValid)
        {
            return;
        }

        cargando = true;
        mensajeError = string.Empty;

        try
        {
            Console.WriteLine($"🔐 Intentando login para: {loginModel.Username}");

            // Usar el ServicioSesion para manejar la autenticación
            var sesion = await ServicioSesion.IniciarSesion(loginModel);

            if (sesion != null)
            {
                Console.WriteLine($"✅ Login exitoso: {sesion.Username}");
                Snackbar.Add($"¡Bienvenido {sesion.Nombre}!", Severity.Success);
                await Task.Delay(500);
                Nav.NavigateTo("/", forceLoad: true);
            }
            else
            {
                mensajeError = "Usuario o contraseña incorrectos";
                Snackbar.Add(mensajeError, Severity.Error);
                Console.WriteLine("❌ Login fallido");
            }
        }
        catch (Exception ex)
        {
            mensajeError = "Error de conexión con el servidor";
            Snackbar.Add(mensajeError, Severity.Error);
            Console.WriteLine($"❌ Excepción en Login: {ex.Message}");
        }
        finally
        {
            cargando = false;
        }
    }

    protected override void OnInitialized()
    {
        loginModel = new LoginDto();
    }
}
