@page "/activos/nuevo"
@page "/activos/editar/{IdActivo:int}"
@using ITSM.Entidades
@using ITSM.WEB.Client.Servicios
@using MudBlazor
@inject InventarioServicio _inventarioServicio
@inject UsuarioServicio _usuarioServicio
@inject NavigationManager Navigation
@inject ISnackbar Snackbar

<MudText Typo="Typo.h5" Class="mb-4">@(IdActivo == 0 ? "Registrar Nuevo Activo" : "Editar Activo")</MudText>

<MudPaper Class="pa-6" Elevation="3">
    <MudForm @bind-IsValid="@success">
        <MudGrid>
            <MudItem xs="12" md="6">
                <MudSelect T="int" Label="Tipo de Bien" @bind-Value="activo.IdTipo"
                           Variant="Variant.Outlined" AnchorOrigin="Origin.BottomCenter" Required="true">
                    @foreach (var tipo in listaTipos)
                    {
                        <MudSelectItem Value="@tipo.IdTipo">@tipo.Nombre</MudSelectItem>
                    }
                </MudSelect>
            </MudItem>

            <MudItem xs="12" md="6">
                <MudTextField @bind-Value="activo.CodInventario" Label="Código Patrimonial / Etiqueta"
                              Variant="Variant.Outlined" Required="true" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.QrCode" />
            </MudItem>

            <MudItem xs="12" md="4">
                <MudTextField @bind-Value="activo.Marca" Label="Marca" Variant="Variant.Outlined" Required="true" />
            </MudItem>
            <MudItem xs="12" md="4">
                <MudTextField @bind-Value="activo.Modelo" Label="Modelo" Variant="Variant.Outlined" Required="true" />
            </MudItem>
            <MudItem xs="12" md="4">
                <MudTextField @bind-Value="activo.Serie" Label="Número de Serie" Variant="Variant.Outlined" Required="true" />
            </MudItem>

            <MudItem xs="12">
                <MudSelect T="int?" Label="Asignar a Usuario (Opcional)" @bind-Value="activo.IdUsuarioAsignado"
                           Variant="Variant.Outlined" AnchorOrigin="Origin.BottomCenter" Clearable="true" SearchBox="true">
                    @foreach (var user in listaUsuarios)
                    {
                        <MudSelectItem T="int?" Value="@user.IdUsuario">@user.NombreCompleto (@user.Cargo)</MudSelectItem>
                    }
                </MudSelect>
            </MudItem>

            <MudItem xs="12" Class="d-flex justify-end gap-2 mt-4">
                <MudButton Variant="Variant.Text" OnClick="Cancelar">Cancelar</MudButton>
                <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="Guardar" Disabled="@(!success)">Guardar Activo</MudButton>
            </MudItem>
        </MudGrid>
    </MudForm>
</MudPaper>

@code {
    [Parameter] public int IdActivo { get; set; }
    Activo activo = new();
    List<TipoActivo> listaTipos = new();
    List<Usuario> listaUsuarios = new();
    bool success;

    protected override async Task OnInitializedAsync()
    {
        var t1 = _inventarioServicio.ListarTipos();
        var t2 = _usuarioServicio.ListarUsuarios();
        await Task.WhenAll(t1, t2);
        listaTipos = t1.Result;
        listaUsuarios = t2.Result;

        if (IdActivo != 0)
        {
            var encontrado = await _inventarioServicio.ObtenerActivo(IdActivo);
            if (encontrado != null) activo = encontrado;
        }
    }

    async Task Guardar()
    {
        try
        {
            await _inventarioServicio.GuardarActivo(activo);
            Snackbar.Add("Activo guardado con éxito", Severity.Success);
            Navigation.NavigateTo("/activos/inventario");
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error: {ex.Message}", Severity.Error);
        }
    }

    void Cancelar() => Navigation.NavigateTo("/activos/inventario");
}