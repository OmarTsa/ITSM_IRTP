@page "/activos/nuevo"
@page "/activos/editar/{IdActivo:int}"
@using ITSM.Entidades
@using ITSM.WEB.Client.Servicios
@using MudBlazor
@inject InventarioServicio _inventarioServicio
@inject NavigationManager Navigation
@inject ISnackbar Snackbar

@rendermode InteractiveWebAssembly

<MudContainer MaxWidth="MaxWidth.Medium" Class="mt-8">
    <MudText Typo="Typo.h5" Class="mb-4"><b>@(IdActivo == 0 ? "Registrar Nuevo Activo" : "Editar Activo")</b></MudText>

    <MudPaper Class="pa-6" Elevation="3">
        <MudForm @bind-IsValid="@success">
            <MudGrid>
                <MudItem xs="12" md="4">
                    <MudTextField @bind-Value="activo.CodigoPatrimonial" Label="Código Patrimonial"
                                  Variant="Variant.Outlined" Required="true" />
                </MudItem>
                <MudItem xs="12" md="4">
                    <MudSelect T="int" Label="Tipo de Activo" Variant="Variant.Outlined" @bind-Value="activo.IdTipo" Required="true">
                        @if (listaTipos != null)
                        {
                            @foreach (var tipo in listaTipos)
                            {
                                <MudSelectItem Value="@tipo.IdTipo">@tipo.Nombre</MudSelectItem>
                            }
                        }
                    </MudSelect>
                </MudItem>
                <MudItem xs="12" md="4">
                    <MudTextField @bind-Value="activo.Serie" Label="Número de Serie" Variant="Variant.Outlined" Required="true" />
                </MudItem>

                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="activo.Marca" Label="Marca" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="activo.Modelo" Label="Modelo" Variant="Variant.Outlined" />
                </MudItem>

                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="activo.UbicacionFisica" Label="Ubicación Física" Variant="Variant.Outlined" />
                </MudItem>
                <MudItem xs="12" md="6">
                    <MudTextField @bind-Value="activo.EstadoOperativo" Label="Estado Operativo" Variant="Variant.Outlined" />
                </MudItem>

                <MudItem xs="12" Class="d-flex justify-end gap-2 mt-4">
                    <MudButton Variant="Variant.Text" OnClick="@(() => Navigation.NavigateTo("/activos/inventario"))">Cancelar</MudButton>
                    <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="Guardar" Disabled="@(!success)">
                        Guardar Activo
                    </MudButton>
                </MudItem>
            </MudGrid>
        </MudForm>
    </MudPaper>
</MudContainer>

@code {
    [Parameter] public int IdActivo { get; set; }
    private Activo activo = new();
    private List<TipoActivo>? listaTipos;
    private bool success;

    protected override async Task OnInitializedAsync()
    {
        listaTipos = await _inventarioServicio.ListarTipos();
        if (IdActivo != 0)
        {
            var encontrado = await _inventarioServicio.ObtenerPorId(IdActivo);
            if (encontrado != null) activo = encontrado;
        }
    }

    private async Task Guardar()
    {
        try
        {
            await _inventarioServicio.GuardarActivo(activo);
            Snackbar.Add("Cambios guardados correctamente", Severity.Success);
            Navigation.NavigateTo("/activos/inventario");
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error al procesar: {ex.Message}", Severity.Error);
        }
    }
}