@page "/dashboard"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]

<PageTitle>Dashboard - ITSM</PageTitle>

<MudContainer Class="mt-8">
    <MudText Typo="Typo.h3" Class="mb-4">Tablero de Control</MudText>

    <MudGrid>
        @* Tarjeta 1: Mis Tickets *@
        <MudItem xs="12" sm="6" md="4">
            <MudPaper Elevation="2" Class="pa-4 d-flex flex-column align-center justify-center mud-width-full py-8">
                <MudIcon Icon="@Icons.Material.Filled.ConfirmationNumber" Color="Color.Primary" Size="Size.Large" />
                <MudText Typo="Typo.h6" Class="mt-2">Mis Tickets</MudText>
                <MudText Typo="Typo.h4">12</MudText>
            </MudPaper>
        </MudItem>

        @* Tarjeta 2: Pendientes *@
        <MudItem xs="12" sm="6" md="4">
            <MudPaper Elevation="2" Class="pa-4 d-flex flex-column align-center justify-center mud-width-full py-8">
                <MudIcon Icon="@Icons.Material.Filled.PendingActions" Color="Color.Warning" Size="Size.Large" />
                <MudText Typo="Typo.h6" Class="mt-2">Pendientes</MudText>
                <MudText Typo="Typo.h4">5</MudText>
            </MudPaper>
        </MudItem>

        @* Tarjeta 3: Resueltos *@
        <MudItem xs="12" sm="12" md="4">
            <MudPaper Elevation="2" Class="pa-4 d-flex flex-column align-center justify-center mud-width-full py-8">
                <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Color="Color.Success" Size="Size.Large" />
                <MudText Typo="Typo.h6" Class="mt-2">Resueltos</MudText>
                <MudText Typo="Typo.h4">45</MudText>
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>