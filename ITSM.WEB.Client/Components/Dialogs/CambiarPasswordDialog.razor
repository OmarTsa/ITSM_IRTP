@using ITSM.WEB.Client.Servicios
@inject IUsuarioServicio UsuarioServicio
@inject ISnackbar Snackbar

<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.h6" Class="mb-4">
            Cambiar Contraseña - @NombreUsuario
        </MudText>

        <MudTextField @bind-Value="nuevaPassword" 
                      Label="Nueva Contraseña" 
                      InputType="@InputType.Password"
                      Variant="Variant.Outlined"
                      Required="true"
                      HelperText="Mínimo 6 caracteres"
                      Class="mb-3" />

        <MudTextField @bind-Value="confirmarPassword" 
                      Label="Confirmar Contraseña" 
                      InputType="@InputType.Password"
                      Variant="Variant.Outlined"
                      Required="true"
                      Class="mb-3" />

        @if (!string.IsNullOrEmpty(mensajeError))
        {
            <MudAlert Severity="Severity.Error" Class="mt-2">@mensajeError</MudAlert>
        }
    </DialogContent>

    <DialogActions>
        <MudButton OnClick="Cancelar" Variant="Variant.Text">Cancelar</MudButton>
        <MudButton OnClick="CambiarPassword" 
                   Variant="Variant.Filled" 
                   Color="Color.Primary"
                   Disabled="@procesando">
            @if (procesando)
            {
                <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true" />
                <MudText Class="ms-2">Procesando...</MudText>
            }
            else
            {
                <MudText>Cambiar Contraseña</MudText>
            }
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = null!;
    
    [Parameter] public int IdUsuario { get; set; }
    [Parameter] public string NombreUsuario { get; set; } = string.Empty;

    private string nuevaPassword = string.Empty;
    private string confirmarPassword = string.Empty;
    private string mensajeError = string.Empty;
    private bool procesando = false;

    private async Task CambiarPassword()
    {
        mensajeError = string.Empty;

        // Validaciones
        if (string.IsNullOrWhiteSpace(nuevaPassword))
        {
            mensajeError = "La contraseña no puede estar vacía";
            return;
        }

        if (nuevaPassword.Length < 6)
        {
            mensajeError = "La contraseña debe tener al menos 6 caracteres";
            return;
        }

        if (nuevaPassword != confirmarPassword)
        {
            mensajeError = "Las contraseñas no coinciden";
            return;
        }

        procesando = true;
        try
        {
            var exitoso = await UsuarioServicio.CambiarPassword(IdUsuario, nuevaPassword);
            
            if (exitoso)
            {
                Snackbar.Add("Contraseña actualizada correctamente", Severity.Success);
                MudDialog.Close(DialogResult.Ok(true));
            }
            else
            {
                mensajeError = "Error al cambiar la contraseña";
            }
        }
        catch (Exception ex)
        {
            mensajeError = $"Error: {ex.Message}";
        }
        finally
        {
            procesando = false;
        }
    }

    private void Cancelar()
    {
        MudDialog.Cancel();
    }
}
