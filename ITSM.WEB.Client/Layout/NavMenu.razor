@using Microsoft.AspNetCore.Components.Authorization

<MudNavMenu>
    <MudNavLink Href="/dashboard" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Dashboard">Dashboard</MudNavLink>

    <AuthorizeView Roles="Administrador,Especialista">
        <MudNavGroup Title="HelpDesk" Icon="@Icons.Material.Filled.SupportAgent" Expanded="true">
            <MudNavLink Href="/helpdesk/gestion" Icon="@Icons.Material.Filled.Assignment">Gestión de Tickets</MudNavLink>
        </MudNavGroup>

        <MudNavGroup Title="Activos" Icon="@Icons.Material.Filled.Devices" Expanded="false">
            <MudNavLink Href="/activos/inventario" Icon="@Icons.Material.Filled.List">Inventario OTIC</MudNavLink>
        </MudNavGroup>
    </AuthorizeView>

    <MudNavGroup Title="Soporte Usuario" Icon="@Icons.Material.Filled.Person" Expanded="true">
        <MudNavLink Href="/helpdesk/nuevo" Icon="@Icons.Material.Filled.AddCircle">Nueva Solicitud</MudNavLink>
        <MudNavLink Href="/helpdesk/mis-tickets" Icon="@Icons.Material.Filled.History">Mis Solicitudes</MudNavLink>
    </MudNavGroup>

    <AuthorizeView Roles="Administrador">
        <MudNavGroup Title="Configuración" Icon="@Icons.Material.Filled.Settings">
            <MudNavLink Href="/admin/usuarios" Icon="@Icons.Material.Filled.People">Usuarios</MudNavLink>
        </MudNavGroup>
    </AuthorizeView>
