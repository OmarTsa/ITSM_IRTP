@using Microsoft.AspNetCore.Components.Authorization
@using ITSM.WEB.Client.Layout

<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(Program).Assembly">
        <Found Context="routeData">
            @* Usamos AuthorizeRouteView para que POR DEFECTO todo sea privado *@
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    <div class="alert alert-danger m-4" role="alert">
                        No tienes autorización para ver esta página.
                        <a href="login" class="btn btn-primary btn-sm ms-2">Ir al Login</a>
                    </div>
                </NotAuthorized>
            </AuthorizeRouteView>
            <FocusOnNavigate RouteData="@routeData" Selector="h1" />
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(MainLayout)">
                <p role="alert" class="pa-4">Lo sentimos, no hay nada en esta dirección.</p>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>